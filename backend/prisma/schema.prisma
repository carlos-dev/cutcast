generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  createdAt DateTime @default(now())
  jobs      Job[]

  @@map("users")
}

model Job {
  id           String     @id @default(uuid())
  userId       String
  inputUrl     String
  outputUrl    String?
  status       String
  errorMessage String?
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  user      User       @relation(fields: [userId], references: [id])
  callbacks Callback[]

  @@map("jobs")
}

model Callback {
  id           String   @id @default(uuid())
  jobId        String
  status       String
  outputUrl    String?
  errorMessage String?
  receivedAt   DateTime @default(now())

  job Job @relation(fields: [jobId], references: [id], onDelete: Cascade)

  @@map("callbacks")
}

